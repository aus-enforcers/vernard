<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Vernard.Views.Settings.SettingsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <StackPanel>
        <TextBlock>Settings</TextBlock>
        <StackPanel>
            <TextBlock>Default Time</TextBlock>
            <TextBox Text="{x:Bind ViewModel.DefaultTime, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel>
            <TextBlock>Always On Top</TextBlock>
            <CheckBox IsChecked="{x:Bind ViewModel.AlwaysOnTop, Mode=TwoWay}"></CheckBox>
        </StackPanel>
        <StackPanel>
            <TextBlock>Open At Login</TextBlock>
            <CheckBox IsChecked="{x:Bind ViewModel.OpenAtLogin, Mode=TwoWay}"></CheckBox>
        </StackPanel>
        <StackPanel>
            <TextBlock>Play Warnings</TextBlock>
            <CheckBox IsChecked="{x:Bind ViewModel.PlayWarnings, Mode=TwoWay}"></CheckBox>
        </StackPanel>
        <StackPanel>
            <Button Click="ButtonCancel_Click">Cancel</Button>
            <Button Click="ButtonApply_Click">Apply</Button>
            <Button Click="ButtonSave_Click">Save</Button>
        </StackPanel>
    </StackPanel>
</Page>
